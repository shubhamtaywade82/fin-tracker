<div class="results-block ">
  <%= render 'layouts/messages'%>
</div>
<% if @friends %>
  <div class="card card-header results-block">
    <table class="col-md-12">
      <% @friends.each do |friend| %>
        <tr>
          <td><strong>Name: </strong><%= friend.full_name%>
            <td><strong>Email: </strong><%=friend.email%></td>
            <td><strong> Actions: <%= link_to 'View Profile', "#", class:"btn btn-sm btn-success" %>
                <%= link_to 'Follow', "#", class: "btn btn-xs btn-success", method: :post %></td>
            </tr>
          <% end %>
        </table>
      </div>
    <%end%>
